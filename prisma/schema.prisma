generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["referentialIntegrity"]
}

datasource db {
  provider             = "mysql"
  url                  = env("DATABASE_URL")
  referentialIntegrity = "prisma"
}

model User {
  id          String  @id
  displayName String
  avatar      String?
}

model Microblog {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  text      String
}
